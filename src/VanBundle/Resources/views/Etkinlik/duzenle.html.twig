<!-- Carousel Başı-->
<div class="container">

    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header"> Galeri</h1>
        </div>

        <div class="col-lg-2 col-md-4 col-xs-6 thumb thumbnail">


            <img class="img-responsive " src="{{ asset('uploads/brochures/' ~ etkinlikler.kapakFoto ) }}">

        </div>


    </div>

    <!-- Carousel Sonu-->

     <!-- form div bası-->
     <div class="container">
     <form action="{{ path('etkinlik_guncelle') }}" method="post" enctype="multipart/form-data">

         <div class="form-group">
             <label for="adi">Adı:</label>
             <input type="text" name="adi" id="adi" value="{{ etkinlikler.adi }}" class="form-control" required>
         </div>

         <div class="form-group">
             <label for="adres">Adres:</label>
             <input type="text" name="adres" id="adres" value="{{ etkinlikler.adres }}" class="form-control" required>
         </div>

         <div class="form-group">
             <label for="aciklama">Açiklama:</label>
         <input type="text" name="aciklama" id="aciklama"  value="{{ etkinlikler.aciklama }}" class="form-control" required>
        </div>

         <div class="form-group">
             <label for="kapakFoto">Kapak Fotoğrafını Seçiniz</label>
             <input type="file" name="kapakFoto" id="kapakFoto" class="form-control"  accept="image/*">
         </div>

         <input type="hidden" value="{{ etkinlikler.id }}" name="id">

         <button type="submit" class="btn btn-default">Kaydet</button>
     </form>
     </div> <!-- form div sonu-->















